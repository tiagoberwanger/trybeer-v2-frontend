{
  "name": "front-end",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@heroicons/react": "^1.0.1",
    "@mars/heroku-js-runtime-env": "^3.0.2",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.5.0",
    "@testing-library/user-event": "7.2.1",
    "autoprefixer": "^10.2.5",
    "axios": "0.19.2",
    "chokidar-cli": "^2.1.0",
    "dompurify": "^2.2.7",
    "eslint-config-trybe-frontend": "1.2.0",
    "jquery": "1.9.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons": "^4.2.0",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.1",
    "socket.io-client": "3.1.0",
    "tailwindcss": "^2.0.3"
  },
  "scripts": {
    "start": "npm run build && react-scripts start",
    "build": "postcss src/tailwind.css -o src/tailwindbuild.css",
    "build:react": "react-scripts build",
    "test": "react-scripts test",
    "test-coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint --no-inline-config --ext .js,.jsx --no-error-on-unmatched-pattern -c .eslintrc.json .",
    "lint:styles": "stylelint **/*.css --config .stylelintrc.json --ignore-disables --allow-empty-input"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "index.js",
      "serviceWorker.js",
      "./services/renderWithRouter",
      "./services/history",
      "App.test.js"
    ],
    "coverageReporters": [
      "json",
      "lcovonly",
      "text",
      "clover"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "autoprefixer": "^10.2.5",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jsx-a11y": "6.3.0",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "mocha": "7.0.1",
    "postcss": "^8.2.8",
    "stylelint": "13.8.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "typescript": "2.8.1"
  }
}
